<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.kienminh.controller.RegisterController"
            prefWidth="400" prefHeight="500"
            style="-fx-background-color: linear-gradient(to bottom, #1e3c72, #2a5298);"
            stylesheets="@/view/login.css">

    <VBox alignment="CENTER" spacing="15.0"
          AnchorPane.topAnchor="60" AnchorPane.leftAnchor="50"
          AnchorPane.rightAnchor="50" AnchorPane.bottomAnchor="50"
          style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 30;">

        <Text text="TẠO TÀI KHOẢN"
              style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-fill: #2a5298;"/>

        <Label text="Tên đăng nhập:" style="-fx-font-size: 14px;"/>
        <TextField fx:id="usernameField"
                   promptText="Nhập tên đăng nhập..."
                   prefWidth="250"/>

        <Label text="Mật khẩu:" style="-fx-font-size: 14px;"/>
        <PasswordField fx:id="passwordField"
                       promptText="Nhập mật khẩu..."
                       prefWidth="250"/>

        <Button text="Đăng ký"
                prefWidth="250"
                onAction="#onRegister"
                style="-fx-background-color: #2a5298; -fx-text-fill: white; -fx-font-size: 16px;"/>

        <Hyperlink text="Đã có tài khoản? Đăng nhập ngay"
                   onAction="#onLoginRedirect"
                   style="-fx-font-size: 13px;"/>

    </VBox>
</AnchorPane>
