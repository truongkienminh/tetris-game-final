<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.kienminh.controller.MultiGameController"
            prefWidth="800" prefHeight="600"
            style="-fx-background-color: linear-gradient(to bottom right, #1e1e2f, #2d2d44);">

    <VBox spacing="10" alignment="CENTER" layoutX="20" layoutY="20">
        <Label text="MULTI GAME" textFill="WHITE">
            <font>
                <Font size="28" />
            </font>
        </Label>

        <HBox spacing="20" alignment="CENTER">
            <Label fx:id="scoreLabel" text="Score: 0" textFill="WHITE" />
            <Label fx:id="levelLabel" text="Level: 1" textFill="WHITE" />
            <Label fx:id="statusLabel" text="Status: WAITING" textFill="WHITE" />
        </HBox>

        <Canvas fx:id="gameCanvas" width="300" height="500" style="-fx-border-color: white;"/>

        <HBox spacing="10" alignment="CENTER">
            <Button text="Quay láº¡i"
                    onAction="#onBack"
                    style="-fx-background-color: #d93a3a; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
    </VBox>

</AnchorPane>
